<com.github.lassana.releases.view.DraggablePanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dpl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    dpl:bottom_panel_height="128dp"
    dpl:parallax_factor="0.5"
    dpl:shadow_drawable="@drawable/shadow_np"
    dpl:prevent_touch_events="true"
    tools:context="com.github.lassana.releases.fragment.MainFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stripes"/>

    <RelativeLayout
        android:background="#fff"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@android:id/button1"
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@android:id/button1"/>

    </RelativeLayout>


</com.github.lassana.releases.view.DraggablePanelLayout>
